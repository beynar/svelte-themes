{
	"name": "svelte-themes",
	"version": "1.0.2",
	"description": "An abstraction for themes in your Svelte app - port of next-themes for Svelte",
	"type": "module",
	"keywords": [
		"svelte",
		"sveltekit",
		"themes",
		"dark-mode",
		"light-mode",
		"theme-switching",
		"next-themes"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pacocoursey/svelte-themes.git"
	},
	"homepage": "https://svelte-themes.vercel.app",
	"bugs": {
		"url": "https://github.com/pacocoursey/svelte-themes/issues"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"publishConfig": {
		"directory": "dist",
		"access": "public"
	},
	"peerDependencies": {
		"svelte": "^4.0.0 || ^5.0.0"
	},
	"scripts": {
		"analyze": "source-map-explorer .svelte-kit/output/client/_app/immutable/chunks/*.js --html > bundle-analysis.html",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"build": "vite build",
		"package": "svelte-kit sync && svelte-package",
		"prepublishOnly": "npm run package",
		"dev": "vite dev --port=9090",
		"prepare": "svelte-kit sync || echo ''",
		"preview": "vite preview"
	},
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"@stylistic/eslint-plugin": "^5.2.3",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-vercel": "^5.10.2",
		"@sveltejs/kit": "^2.36.3",
		"@sveltejs/package": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@typescript-eslint/eslint-plugin": "^8.41.0",
		"@typescript-eslint/parser": "^8.41.0",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"svelte": "^5.38.6",
		"svelte-check": "^4.3.1",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"vite": "^7.1.3"
	}
}
